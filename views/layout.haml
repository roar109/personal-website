!!!
%html
	%head
		%meta{'http-equiv'=>'Content-type', 'content'=>'text/html;charset=UTF-8'}
		%meta{'name'=>'viewport', 'content'=>'width=device-width, initial-scale=1.0'}
		%title Rage
		%link{:href=>"//netdna.bootstrapcdn.com/bootstrap/3.1.1/css/bootstrap.min.css", :rel=>"stylesheet"}
		%link{'href'=>'http://cdn.rageco.info/css/rc.css','rel'=>'stylesheet','media'=>'screen'}
		%link{'href'=>'http://cdn.rageco.info/favicon.ico','rel'=>'shortcut icon'}
	%body
		%div{'class'=>"container-narrow"}
			%div{'class'=>"masthead"}
				%ul{'class'=>'nav nav-pills pull-right'}
					%li{'class'=>@activeTab == 'root' && 'active'}
						%a{'href'=>'/'} Home
					%li{'class'=>@activeTab == 'about' && 'active'}
						%a{'href'=>'/about'} About
					%li
						%a{'href'=>'#aboutModal','data-toggle'=>'modal','role'=>'button','data-target'=>'#aboutModal'} Contact
				%h3{'class'=>'muted'} Rage
			%hr
			=yield
		%div{'id'=>"contactTempl"}
			%div{'class'=>'modal fade','id'=>'aboutModal','tabindex'=>'-1','role'=>'dialog', 'aria-labelledby'=>'aboutModal','aria-hidden'=>'true'}
				%div{'class'=>'modal-dialog modal-med'}
					%div{'class'=>'modal-content'}
						%div{'class'=>'modal-header'}
							%button{'type'=>'button','class'=>'close','data-dismiss'=>'modal', 'aria-hidden'=>'true'} &times;
							%h3 Contact
						%div{'class'=>'modal-body'}
							%p
								No email for now folks, use one of the social media links I attached.
						%div{'class'=>'modal-footer'} 
							%a{'href'=>'#aboutModal','class'=>'btn','data-dismiss'=>'modal'} Close

		%script{'src'=>'http://cdnjs.cloudflare.com/ajax/libs/jquery/2.0.2/jquery.min.js'}
		%script{:src=>"//netdna.bootstrapcdn.com/bootstrap/3.1.1/js/bootstrap.min.js"}
